---
const { currentPg, totalPg, disablePrevious, disableNext} = Astro.props


interface Props {
    currentPg: number;
    totalPg: number;
    disablePrevious: boolean;
    disableNext: boolean;
}
---


<!-- Pagination -->
  <div class="flex justify-between mt-10">
    <a
      href={'/articles?page=' + (currentPg - 1)}
      class="inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"
    >
      Previous
    </a>
    <a
  href={'/articles?page=' + (currentPg + 1)}
      class="inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"
    >
      Next
    </a>
  </div>