---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from '../images/error-404.png'
---


<MainLayout title="404 - Lost island">
    <div class="flex flex-col items-center justify-items-center gap-7">
        <Image src={error} alt="lost user" height={250} width={250} class="mt-10" />
        <h1 class="text-5xl">Unknown Search</h1>
        <p class="text-2xl mb-10">
            Sorry, your request happened to be unknown
        </p>
        <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Go back home?</a>
    </div>
</MainLayout>